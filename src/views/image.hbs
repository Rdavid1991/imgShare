<div class="row d-flex justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>{{image.title}}</h2>
                {{#if delete}}
                {{#if user}}
                <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
                    <i class="fa fa-times"></i>Delete
                </button>
                {{/if}}
                {{/if}}
            </div>
            <div class="card-body">
                <p>{{image.description}}</p>
                <div class="text-center">
                    <img src="/public/upload/{{image.filename}}" alt="" class="img-fluid">
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                {{#if status}}
                <button class="btn btn-primary" id="btn-like" data-id="{{image.filename}}">
                {{else}}
                <button class="btn btn-secondary" id="btn-like" data-id="{{image.filename}}">
                {{/if}}
                <i class="fas fa-thumbs-up"></i>Like
                </button>

                <p>
                    <i class="fas fa-heart"></i>
                    <span class="likes-count">{{image.likes}}</span>
                </p>
                <p>
                    <i class="fas fa-eye"></i>
                    {{image.views}}
                </p>
                <p>
                    <i class="far fa-clock"></i>
                    {{timeago image.timestamp}}
                </p>
            </div>
        </div>

        <div class="card mt-2">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Comments</h3>
                <button class="btn btn-info" id="btn-toggle-coment">
                    <i class="fa fa-comment-o"></i> Post a comment
                </button>
            </div>
        </div>
        <div class="cardbody">
            <blockquote id='post-comment'>
                <form action="/images/{{image.uniqueId}}/comment" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea name="comment" rows="2" class="form-control" placeholder="Your comment"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" id="btn-comment">
                            <i class="fa fa-comment"></i>Post
                        </button>
                    </div>
                </form>
            </blockquote>
            <ul class="list-group">
                {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="http://" class="col-md-1 d-flex align-items-center justify-content-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="footer">
                                {{name}} - {{timeago timestamp}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>