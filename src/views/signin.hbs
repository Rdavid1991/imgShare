{{#if signinMessage}}
<div class="alert alert-danger">
    {{signinMessage}}
</div>
{{/if}}

<div class="d-flex align-items-center justify-content-center" style="height: 33rem" ;>
    <div class="card" style="width: 25rem">
        <div class="card-header">Login</div>
        <div class="card-body">
            <form action="/signin" method="POST">
                <div class=" form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Insert email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Insert password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">SignIn</button>
                </div>
            </form>
        </div>
    </div>
</div>