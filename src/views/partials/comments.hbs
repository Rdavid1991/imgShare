{{#if sidebar.comment}}
<div class="card-m2">
    <div class="card-header bg-darck text-white">
        <h5><i class="fas fa-comments"></i>Ultimos comentarios</h5>
    </div>
    <div class="card-body">
        {{#each sidebar.comment}}
            <div class="row m-1">
                <div class="col">
                    <a href="/image/{{image.uniqueId}}">
                    <img src="/public/upload/{{image.filename}}" alt="" class="img-thumbnail w-70"></a>
                </div>
                <div class="col">
                    <blockquote class="w-100">
                        <p>{{comment}}</p>
                        <footer class="blockquote-footer">
                            <span>{{name}}</span>
                            <span>{{timeago timestamp}}</span>
                        </footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
</div>
{{/if}}